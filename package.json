{
  "private": true,
  "scripts": {
    "app:build": "zeroconfig-webapp-scripts build app",
    "app:start": "zeroconfig-webapp-scripts start app",
    "storybook:start": "start-storybook",
    "storybook:build": "build-storybook",
    "build": "npm run app:build",
    "start": "npm run app:start",
    "test": "jest --colors",
    "lint": "eslint \"src/**/*.{js,jsx,mjs,ts,tsx}\" && tslint \"src/**/*.{ts,tsx}\""
  },
  "jest": {
    "preset": "react-zeroconfig"
  },
  "husky": {
    "hooks": {
      "pre-commit": "markdown-source-import \"{,!(node_modules)/**/}*.md\" --git-add && lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,mjs}": [
      "eslint",
      "jest --colors --findRelatedTests"
    ],
    "src/**/*.{ts,tsx}": [
      "eslint",
      "tslint",
      "jest --colors --findRelatedTests"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "eslintIgnore": [
    "src/**/public/*",
    "src/**/*.d.ts"
  ],
  "dependencies": {
    "@loadable/component": "^5.10.2",
    "@loadable/server": "^5.10.2",
    "koa": "^2.8.1",
    "koa-router": "^7.4.0",
    "react": "^16.9.0",
    "react-dom": "^16.9.0"
  },
  "devDependencies": {
    "@storybook/addon-storysource": "^5.1.11",
    "@storybook/react": "^5.1.11",
    "@types/eslint": "^6.1.1",
    "@types/jest": "^24.0.18",
    "@types/koa": "^2.0.49",
    "@types/koa-router": "^7.0.42",
    "@types/loadable__component": "^5.10.0",
    "@types/loadable__server": "^5.9.1",
    "@types/puppeteer": "^1.19.1",
    "@types/react": "^16.9.2",
    "@types/react-dom": "^16.9.0",
    "@types/storybook__react": "^4.0.2",
    "@types/webpack-env": "^1.14.0",
    "eslint": "^6.2.1",
    "eslint-config-react-app": "^5.0.1",
    "husky": "^3.0.4",
    "jest": "^24.9.0",
    "lint-staged": "^9.2.3",
    "markdown-source-import": "^1.1.0",
    "puppeteer": "^1.19.0",
    "react-zeroconfig": "^3.15.0",
    "tslint": "^5.19.0",
    "tslint-ssen-rules": "^1.3.0"
  }
}
